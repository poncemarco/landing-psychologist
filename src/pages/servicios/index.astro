---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import { getCollection } from "astro:content";

// Fetch all ministries
const all = await getCollection("services", ({ data }) =>
  import.meta.env.PROD ? !data.draft : true
);
// Sort by order or name
const services = all.sort((a, b) =>
  (a.data.order ?? 0) - (b.data.order ?? 0) ||
  a.data.name.localeCompare(b.data.name)
);
---

<BaseLayout title="Servicios" description="Descubre todas las terápias disponibles.">
  <PageHeader
    title="Servicios"
    subtitle="Descrubre todas las terápias disponibles."
    backgroundImage="/uploads/cover-services.jpeg"
  />

  <!-- Ministries Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Terapias</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Explora espacios para darle sentido a lo vivido.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map(m => (
        <a
          href={`/servicios/${m.slug}`}
          class="
          g-white rounded-lg shadow 
          flex flex-col overflow-hidden 
          hover:shadow-lg transition
          min-h-[370px]
          "
        >
            <!-- gambar fixed height 200px -->
            {m.data.logo && (
              <div class="w-full h-[200px] overflow-hidden">
                <img
                  src={m.data.logo}
                  alt={m.data.name}
                  class="w-full h-full object-cover"
                />
              </div>
            )}

            <div class="p-4 flex flex-col flex-1 justify-between">
              <div>
                <h3 class="text-xl font-semibold mb-2">{m.data.name}</h3>
                <p class="text-gray-700">{m.data.summary}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

